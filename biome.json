{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
	  "enabled": true
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"recommended": true,
		"style": {
		  "noParameterAssign": "off"
		},
		"a11y": {
		  "useValidAnchor": "off",
		  "noSvgWithoutTitle": "off"
		},
		"nursery": {
		  "useSortedClasses": "warn"
		},
		"correctness": {
		  "noUnusedImports": "error"
		}
	  }
	},
	"formatter": {
	  "indentStyle": "space"
	},
	"files": {
	  "ignore": ["dist/**"]
	}
  }
  